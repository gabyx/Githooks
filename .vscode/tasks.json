{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go-build",
      "type": "shell",
      "command": "${workspaceFolder}/githooks/scripts/build.sh",
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "[Dev Container] clean-install",
      "type": "shell",
      "command": "${workspaceFolder}/githooks/scripts/clean-install.sh",
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "[Dev Container] go-build-temp",
      "type": "shell",
      "command": "${workspaceFolder}/githooks/scripts/build.sh",
      "args": ["--bin-dir", "/tmp/githooks"],
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "[Dev Container] go-delve-installer",
      "type": "shell",
      "command": "dlv",
      "args": [
        "debug",
        "--headless",
        "--listen=127.0.0.1:2345",
        "--log",
        "--api-version=2",
        "./apps/cli",
        "--",
        "installer",
        "--config",
        "asd"
      ],
      "options": {
        "cwd": "${workspaceFolder}/githooks",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        },
        "env": {
          "CGO_ENABLED": "0",
          "GOBIN": "${workspaceFolder}/githooks/bin"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "[Dev Container] clean-install",
        "[Dev Container] go-build-temp"
      ],
      "problemMatcher": []
    },
    {
      "label": "[Dev Container] go-delve-uninstaller",
      "type": "shell",
      "command": "dlv",
      "args": [
        "debug",
        "--headless",
        "--listen=127.0.0.1:2345",
        "--log",
        "--api-version=2",
        "./apps/cli",
        "--",
        "uninstaller"
      ],
      "options": {
        "cwd": "${workspaceFolder}/githooks",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        },
        "env": {
          "CGO_ENABLED": "0",
          "GOBIN": "${workspaceFolder}/githooks/bin"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "[Dev Container] clean-install",
        "[Dev Container] go-build-temp"
      ],
      "problemMatcher": []
    },
    {
      "label": "[Dev Container] go-delve-cli",
      "type": "shell",
      "command": "dlv",
      "args": [
        "debug",
        "--headless",
        "--listen=127.0.0.1:2345",
        "--log",
        "--api-version=2",
        "./apps/cli",
        "--",
        "install",
        "--non-interactive"
      ],
      "options": {
        "cwd": "${workspaceFolder}/githooks",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        },
        "env": {
          "CGO_ENABLED": "0",
          "GOBIN": "${workspaceFolder}/githooks/bin"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "[Dev Container] clean-install",
        "[Dev Container] go-build-temp"
      ],
      "problemMatcher": []
    },
    {
      "label": "[Dev Container] go-delve-test",
      "type": "shell",
      "command": "dlv",
      "args": [
        "debug",
        "--headless",
        "--listen=127.0.0.1:2345",
        "--log",
        "--api-version=2",
        "./apps/test",
        "--"
      ],
      "options": {
        "cwd": "${workspaceFolder}/githooks",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        },
        "env": {
          "CGO_ENABLED": "0",
          "GOBIN": "${workspaceFolder}/githooks/bin"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "[Dev Container] clean-install",
        "[Dev Container] go-build-temp"
      ],
      "problemMatcher": []
    }
  ]
}
