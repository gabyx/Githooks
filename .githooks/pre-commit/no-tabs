#!/bin/sh
TAB_FOUND="no"

for WITH_TAB in $(grep -r "$(printf '\t')" ./*.sh ./tests/* .githooks/* examples/* | tr ':' ' ' | awk '{ print $1 }' | sort | uniq); do
    echo "! Tab character found in: $WITH_TAB"
    TAB_FOUND="yes"
done

if [ "$TAB_FOUND" = "no" ]; then
    echo "* No tab characters detected"
else
    exit 1
fi
