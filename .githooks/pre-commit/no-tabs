#!/bin/sh
DIR=$(cd "$(dirname "$0")" && pwd)
. "$DIR/.export-staged"

assertStaged

SUCCESS=0

checkTab() {
    LINES=$(grep -rnH "$(printf '\t')" "$1")

    if [ -n "$LINES" ]; then
        echo "! Tab character found in: $LINES"
        SUCCESS=1
    fi
}

for FILE in $STAGED_FILES; do
    if echo "$FILE" | grep -qvE "(githooks|docs)/.*$"; then
        checkTab "$FILE"
    fi
done

if [ "$SUCCESS" = "0" ]; then
    echo "* No tab characters detected"
else
    exit "$SUCCESS"
fi
