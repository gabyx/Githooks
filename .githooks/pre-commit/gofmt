#!/usr/bin/env bash
if ! command -v gofmt >/dev/null 2>&1; then
    echo "! Skipping gofmt - not installed" >&2
    exit 0
fi

SUCCESS=0

for PKG_DIR in githooks/*; do
    if ! [ -d "$PKG_DIR" ] || echo "$PKG_DIR" | grep -q "vendor"; then
        continue
    fi

    if ! gofmt -l "$PKG_DIR"; then
        SUCCESS=1
    fi
done

if [ "$SUCCESS" = "0" ]; then
    echo "* gofmt is OK." >&2
else
    exit "$SUCCESS"
fi
